{
  "name": "oli.portfolio",
  "version": "4.3.0",
  "description": "Personal Website",
  "main": "index.js",
  "author": "Olimpiu Seulean",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "npm run lint:code ; npm run stylelint",
    "lint:fix": "npm run lint:code:fix ; npm run stylelint:fix",
    "lint:code": "eslint . --ext .vue,.js --fix --ignore-path .gitignore .",
    "lint:code:fix": "eslint . --ext .vue,.js --fix --ignore-path .gitignore . --fix",
    "stylelint": "stylelint \"**/*.{scss,vue}\"",
    "stylelint:fix": "stylelint \"**/*.{scss,vue}\" --fix",
    "test:unit": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:summary": "vitest run --coverage.enabled --coverage.reporter='text-summary'",
    "test:e2e": "start-server-and-test preview :4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' :4173 'cypress open --e2e'",
    "prepare": "husky install"
  },
  "dependencies": {
    "vue": "^3.2.37",
    "vue-router": "^4.1.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitest/coverage-c8": "^0.29.3",
    "@vue/test-utils": "^2.3.1",
    "cypress": "^12.8.1",
    "eslint": "^8.36.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.2.0",
    "happy-dom": "^8.9.0",
    "husky": "^8.0.3",
    "pinia": "^2.0.33",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "pre-commit": "^1.2.2",
    "sass": "^1.59.3",
    "start-server-and-test": "^2.0.0",
    "stylelint": "^15.3.0",
    "stylelint-config-standard": "^31.0.0",
    "vite": "^4.2.0",
    "vitest": "^0.29.3"
  }
}
